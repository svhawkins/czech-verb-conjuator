# set up directory basename
export BASE_DIR=`(pwd)`

# export subdirectories
export PYTHON_PATH=$PYTHON_PATH:$BASE_DIR"/src"
export PYTHON_PATH=$PYTHON_PATH:$BASE_DIR"/data"
export PYTHON_PATH=$PYTHON_PATH:$BASE_DIR"/test"

export VERB_DATA_DIR=${BASE_DIR}/data

# aliases for scripts (python or bash)
alias conjugator="python3.8 ${BASE_DIR}/conjugator.py"
alias tests=". $BASE_DIR/test/test.sh"